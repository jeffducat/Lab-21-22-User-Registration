
@{
    ViewBag.Title = "UpdateProduct";
}

<h2>UpdateProduct</h2>

@model Lab21UserRegistration.Models.Item
<h2>Update Product</h2>

<form action="../CoffeeShop/SaveChanges" method="post">
    <input type="text" name="Name" value="@Model.Name" placeholder="@Model.Name" required />
    <input type="text" name="Description" value="@Model.Description" placeholder="@Model.Description" required />
    <input type="text" name="Quantity" value="@Model.Quantity" placeholder="@Model.Quantity" required />
    <input type="text" name="Price" value="@Model.Price" placeholder="@Model.Price" />
    <input type="submit" class="btn-block" value="Update Product!" />
</form>