
@{ViewBag.Title = "Registration";}

<h2>Registration</h2>
<div id="Regista">
    <form class="Register" action="Welcome" method="get">
        <fieldset id="Name">
            UserName: <input type="text" name="username" placeholder=" create username" required /> <br />
            Email: <input type="email" name="email" placeholder="enter email address" required /> <br />
        </fieldset>
        <fieldset id="Password">
            Password: <input type="password" name="password" placeholder="create password" pattern="[a-zA-Z0-9!#$%^&*]{5,12}" required /> <br />
            Confirm Password:<input type="password" placeholder="confirm password" required /> <br />
        </fieldset>
        <fieldset id="Name">
            Phone number:<input type="tel" name="phoneNumber" placeholder="phone number" required /> <br />
        </fieldset>
        <fieldset id="Location">
            City: <input type="text" name="city" placeholder="enter city" required /> <br />
            Country: <input type="text" name="country" placeholder="enter country" required /> <br />
        </fieldset>
        <fieldset id="Team">
            <h4>Select your favorite English Premier League club:</h4>
            <select>
                <option value="AFC Bournemouth">AFC Bournemouth</option>
                <option value="Arsenal">Arsenal</option>
                <option value="Brighton">Brighton</option>
                <option value="Burnley">Burnley</option>
                <option value="Cardiff City">Cardiff City</option>
                <option value="Chelsea">Chelsea</option>
                <option value="Crystal Palace">Crystal Palace</option>
                <option value="Everton">Everton</option>
                <option value="Fulham">Fulham</option>
                <option value="Huddersfield Town">Huddersield Town</option>
                <option value="Leicester City">Leicester City</option>
                <option value="Liverpool">Liverpool</option>
                <option value="Manchester City">Manchester City</option>
                <option value="Manchester United">Manchester United</option>
                <option value="Newcastle United">Newcastle United</option>
                <option value="Southhampton">Southhampton</option>
                <option value="Tottenham">Tottenham</option>
                <option value="Watford">Watford</option>
                <option value="West Ham">West Ham</option>
                <option value="Wolverhampton">Wolverhampton</option>
            </select>
        </fieldset>
        <input type="submit" value="Click Here!" />
    </form>

</div>